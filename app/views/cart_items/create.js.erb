if(document.getElementById('cart_option<%=@cart_item.product.id%>')) {
  var remove_from_cart_button = '<%= link_to "Remove from cart", product_cart_item_path(@cart_item.product.id, Current.cart.cart_items), method: :delete, remote: true, class: "btn btn-danger"%>'
  document.getElementById('cart_option<%=@cart_item.product.id%>').innerHTML = remove_from_cart_button
}

if(document.getElementById('cart_option_show<%=@cart_item.product.id%>')){
  var remove_from_cart_button = '<%= button_to "Remove from cart", product_cart_item_path(@cart_item.product.id, Current.cart.cart_items.ids), method: :delete, remote: true, class: "btn btn-danger"%>'
  document.getElementById('cart_option_show<%=@cart_item.product.id%>').innerHTML = remove_from_cart_button
}
