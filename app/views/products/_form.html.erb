<%= form_with model: @product do |form| %>
  <%= render partial: "shared/error", locals: { form: form }%> 
    <div class="mb-2">
      <%= form.label :name%>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-2">
    <%= form.label :description %>
    <%= form.text_field :description, class: "form-control"%>
    </div>
    <div class="mb-2">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control"%>
    </div>
    <div class="mb-2">
    <%= form.label :stock %>
    <%= form.number_field :stock, class: "form-control" %>
    </div>
    <div class="mb-2">
    <%= form.label :category_name %>
    <%= form.select :category_name, options_for_select([["Select One", ""], 
      "Mobile", "Electronic", "Fashion", "Home", "Books", "Other"]), class: "form-select", aria: { label: "Default select example"} %>
    </div>
   <div class="mb-2">
    <%= form.submit "Add product", class: "btn btn-primary" %>
  </div>
<% end %>
