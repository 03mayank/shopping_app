<h2>Forgot your password</h2>

<%= form_with url: password_reset_path do |form| %>
  <div class="mb-2">
    <%= form.label :email%>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <br>
  <div class="mb-2">
    <%= form.submit "Send Password Reset link", class: "btn btn-primary" %>
  </div>
<% end %>

