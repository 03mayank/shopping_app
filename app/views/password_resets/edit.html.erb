<h1>Reset your password</h1>

<%= form_with url: password_reset_edit_path do |form| %>
  <div>
    <%= form.label :password%>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation%>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit "reset password" %>
  </div>
<% end %>

