<div class="d-flex justify-content-center"><h2>Login  In</h2></div>

<div class="d-flex justify-content-center">
  <%= form_with url: sign_in_path  do |form| %>
    <div class="mb-2">
      <%= form.label :email%>
      <%= form.text_field :email, class: "form-control", placeholder: "abc@xyz.com" %>
    </div>
    <div class="mb-2"> 
      <%= form.label :password%>
      <%= form.password_field :password, class: "form-control",placeholder: "Password" %>
    </div>
    <%= link_to "forgot password", password_reset_path %>
    <div class="mb-2">
      <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

