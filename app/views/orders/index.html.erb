<h2> Your Orders </h2>
<% if @orders.count < 1 %>
  <h4 style="color:red;">No Orders Yet!</h4>
<% end %>

<div class="row">
  <% @orders.each do |order| %>
    <ul class="col-md-4">
      <div>
        <div class="card mt-5" style="width: 18rem;">
          <%= link_to order_path(order.id), class: "text-decoration-none" do %>
            <table class="table table-hover table-striped table-dark">
              <tr>
                <td>  Order Addresses </td>
                <td> <%= order.address %></td>
              </tr>
              <tr>
                <td>  Total Amount:</td>
                <td> <%= order.total_amount%></td>
              </tr>
              <tr>
                <td> On: </td>
                <td> <%=order.time_of_order %></td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
